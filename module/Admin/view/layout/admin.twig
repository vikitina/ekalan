		<![endif]-->
		<link href={{ basePath('assets/admin/css/styles.css') }} rel="stylesheet">
        <link rel="stylesheet" href={{ basePath('assets/plugins/font-awesome/css/font-awesome.css') }} />
	</head>


<body>
    <div class="main_container">
<!-- header -->
<div id="top-nav" class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Dashboard</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#"><i class="glyphicon glyphicon-user"></i> Admin <span class="caret"></span></a>
                    <ul id="g-account-menu" class="dropdown-menu" role="menu">
                        <li><a href="#">My Profile</a></li>
                    </ul>
                </li>
                <li><a href="/user/logout"><i class="glyphicon glyphicon-lock"></i> Logout</a></li>
            </ul>
        </div>
    </div>
    <!-- /container -->
</div>
<!-- /Header -->

<!-- Main -->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3">
            <!-- Left column -->
            <a href="/admin"><strong> Tools </strong></a>

            <hr>

            <ul class="nav nav-stacked">
                
                           
                        <li><a href="/admin/page"><i class="glyphicon glyphicon-comment"></i> Pages</a></li>
                        <li><a href="/admin/msgs"><i class="glyphicon glyphicon-envelope"></i> Messages <span class="badge badge-info" id="uread_msgs">{{ UnreadMessages() }}</span></a></li>
                        <li><a href="/admin/users"><i class="glyphicon glyphicon-cog"></i> Users</a></li>
                        
                       
                        <li><a href="/user/logout"><i class="glyphicon glyphicon-off"></i> Logout</a></li>
                        
                    
                
           </ul>
  
                
 
           
        </div>
        <!-- /col-3 -->
        <div class="col-sm-9">
            
                {% block content %}{{ content|raw }}{% endblock content %}
       
        <div class="col-md-4">    

                     <div class="table-responsive">

{# system_modal
system_name
system_new_value
system_save_new_value
#}


                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>System Variables</th>
                                </tr>
                            </thead>
                            <tbody>
                        {% for vars in  System() %}
                               <tr>
                                    <td><a href="admin/system/{{ vars.id }}" class="system_list" data-content="{{ vars.data }}" data-id="{{ vars.id }}">{{ vars.name }}</a></td>
                               </tr>
                          {% endfor %}      
                              
                            </tbody>
                        </table>
                    </div>


        </div>
</div>
</div><!--  row -->
        <!--/col-span-9-->
    </div>
</div>
<!-- /Main -->
</div><!-- main_container -->
<footer class="text-center footer">This Bootstrap 3 dashboard layout is compliments of <a href="http://www.bootply.com/85850"><strong>Bootply.com</strong></a></footer>

