{% extends 'layout/admin.twig' %}


{% block content %}

<h2 class="title_page"><a href="/admin/materials">Готовые работы</a></h2> <a href="/admin/addfolio" class="right_link">Добавить новую работу</a>
<hr class="clear" />
<div class="row">
     <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
              <section id="folios">


                 <div class="material_list_container autoheight">
                 {% if folios %}
                       <ul class="list-group material_list">
                         

                         {% for folio in folios %}
                                <li class="list-group-item">
                                  
                                     <a href="/admin/folio/{{ folio.id  }}">
{#<span class="sample" style="background-image:url('/assets/application/samples/data/uploads/1458648591.png');"></span>#}
                                                     <small>{{ folio.number_folio }}</small>
                                                     <span> {{ folio.name_folio }} </span>
                                     </a>
                                     <span class="del_folio_ajax del_link" data-id="{{ folio.id  }}"><i class="fa fa-trash-o"></i></span>

                                </li>
                         {% endfor %}
                       </ul>		
                      
                 </div>   
                 {% else %} <h4>Не найдено ни одного проекта</h4> {% endif %}
             
			</section>
     </div>       
 <div class="modal fade" id="delete_confirm_window">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Подтверждение удаления проекта</h4>
      </div>
      <div class="modal-body">
        Проект будет удален. Вы уверены?
              <form action="/admin/ajaxdelfolio">
                 <input type="hidden" id="deleting_id" />
              </form>   
      </div>
        <div class="modal-footer">
                <a href="#" data-dismiss="modal" class="btn" id="btn_cancel_deleting">Отменить</a>
                <a href="#" class="btn btn-primary" id="btn_confirm_deleting">Удалить</a>
        </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



  
{% endblock content %}